<Window x:Class="PL.customer.OrderTracking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.customer"
        mc:Ignorable="d"
        Title="OrderTracking" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="114,116,0,0" TextWrapping="Wrap" Text="Order #" VerticalAlignment="Top" Height="183" Width="565"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,155,0,0" TextWrapping="Wrap" Text="{Binding Path=ID }" VerticalAlignment="Top" Height="21" Width="76"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,203,0,0" TextWrapping="Wrap" Text="Order Status:" VerticalAlignment="Top" Height="24" Width="83"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,242,0,0" TextWrapping="Wrap" Text="{Binding Path=Status }" VerticalAlignment="Top" Height="23" Width="86"/>
        <ListView x:Name="orderDates" MouseDoubleClick="itemClicked"  FontFamily="Amatic SC" FontSize="16" Cursor="Hand" SelectionChanged="orderDates_SelectionChanged" Margin="244,97,40,120" ItemsSource="{Binding mylist}">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">

                    <GridViewColumn DisplayMemberBinding="{Binding Path=Item1}" Header="date" Width="100"/>

                    <GridViewColumn DisplayMemberBinding="{Binding Path=Item2}" Header="status" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="order details" HorizontalAlignment="Left" Margin="120,270,0,0" VerticalAlignment="Top" Name="order_details" Click="show_order_details"  FontFamily="Amatic SC" FontSize="16" Background="#FFB19578" Height="24" Width="82"/>

    </Grid>
</Window>
